<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tt_MerchantDetails"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dip"
        android:layout_marginTop="40dip"
        android:gravity="center"
        android:text="Card Details"
        android:textColor="#0b84aa"
        android:textSize="20dip" />


    <EditText
        android:id="@+id/et_card_no"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:hint="Card Number"
        android:inputType="number"
        android:maxLength="16" />

    <LinearLayout
        android:id="@+id/llMerchantCardDetails"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_cvv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="CVV"
            android:inputType="number"
            android:maxLength="3" />

        <EditText
            android:id="@+id/et_expYear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:hint="Expiry Year"
            android:inputType="number"
            android:maxLength="4" />

        <EditText
            android:id="@+id/et_expMonth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:hint="Expiry Month"
            android:inputType="number"
            android:maxLength="2" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_nb_paynow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Pay Now" />

    <Button
        android:id="@+id/btn_nb_cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cancel" />

</LinearLayout>